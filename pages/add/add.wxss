.add-bg {
  min-height: 100vh;
  background: #f6f8fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-card {
  width: 90vw;
  max-width: 500rpx;
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 48rpx 32rpx 40rpx 32rpx;
  margin: 60rpx 0;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.form-label {
  width: 100rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.input-box {
  flex: 1;
  font-size: 30rpx;
  padding: 18rpx 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  background: #f8f9fa;
  margin-left: 16rpx;
}

.date-picker {
  flex: 1;
  font-size: 30rpx;
  color: #666;
  background: #f8f9fa;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 18rpx 20rpx;
  margin-left: 16rpx;
}

.type-group {
  display: flex;
  gap: 32rpx;
  margin-left: 16rpx;
}

.type-radio {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e5e5e5;
  background: #f8f9fa;
  color: #888;
  transition: all 0.2s;
}
.type-radio.checked {
  background: #e6f7e6;
  color: #07c160;
  border: 1rpx solid #07c160;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(90deg, #07c160 60%, #4cd964 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 16rpx rgba(7,193,96,0.10);
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-top: 10rpx;
  border: none;
}

.save-btn:active {
  opacity: 0.8;
} 