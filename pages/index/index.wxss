/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.total {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.filter {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.date-picker {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.date-picker .iconfont {
  font-size: 24rpx;
  margin-left: 10rpx;
}

.total-item {
  text-align: center;
}

.total-item text {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.income {
  color: #07c160;
}

.expense {
  color: #ff4d4f;
}

.record-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
}

.record-type {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.record-note {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.record-date {
  font-size: 24rpx;
  color: #999;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.record-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.action-btn.edit {
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
}

.action-btn.delete {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

.empty {
  text-align: center;
  color: #999;
  padding: 100rpx 0;
}

.add-float {
  position: fixed;
  right: 48rpx;
  bottom: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 99;
}
.add-btn {
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(90deg, #07c160 60%, #4cd964 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(7,193,96,0.18);
}
.add-btn text {
  color: #fff;
  font-size: 70rpx;
  line-height: 1;
}
.add-label {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #07c160;
  background: #fff;
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.08);
  font-weight: 500;
  letter-spacing: 2rpx;
}

.main-bg {
  min-height: 100vh;
  background: #f6f8fa;
  padding-bottom: 120rpx;
}

.summary-card {
  width: 92vw;
  max-width: 600rpx;
  margin: 40rpx auto 32rpx auto;
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 40rpx 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-row {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.summary-item {
  text-align: center;
  flex: 1;
}

.summary-label {
  font-size: 28rpx;
  color: #888;
}

.summary-amount {
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 8rpx;
}

.date-filter-card {
  margin: 0 auto;
  margin-top: 10rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  padding: 18rpx 36rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  width: 260rpx;
  justify-content: center;
}
.date-filter-text {
  margin-right: 10rpx;
}

.record-card {
  background: #fff;
  border-radius: 14rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  margin-bottom: 28rpx;
  padding: 28rpx 24rpx 18rpx 24rpx;
}

.record-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-type {
  font-size: 28rpx;
  font-weight: 500;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.record-note {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  margin-left: 2rpx;
}

.record-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.record-date {
  font-size: 24rpx;
  color: #999;
}

.record-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}
.action-btn.edit {
  color: #1890ff;
  background: rgba(24, 144, 255, 0.08);
}
.action-btn.delete {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.08);
}

.empty {
  text-align: center;
  color: #bbb;
  padding: 120rpx 0 0 0;
  font-size: 30rpx;
}

.date-range-row {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 18rpx;
  gap: 18rpx;
}
.date-range-picker {
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  padding: 14rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  min-width: 150rpx;
  text-align: center;
}
.date-range-sep {
  font-size: 28rpx;
  color: #bbb;
  margin: 0 8rpx;
}

.balance {
  color: #333;
}

.sort-row {
  margin-top: 18rpx;
  display: flex;
  justify-content: flex-end;
  width: 100%;
}
.sort-picker {
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: #07c160;
  min-width: 180rpx;
  text-align: center;
  margin-right: 8rpx;
}

.sort-float {
  position: fixed;
  left: 48rpx;
  bottom: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 99;
}
.sort-btn {
  width: 110rpx !important;
  height: 110rpx !important;
  background: linear-gradient(90deg, #07c160 60%, #4cd964 100%) !important;
  border-radius: 50% !important;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(7,193,96,0.18) !important;
}
.sort-icon {
  color: #fff;
  font-size: 70rpx !important;
  line-height: 1;
}
.sort-label {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #07c160;
  background: #fff;
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.08);
  font-weight: 500;
  letter-spacing: 2rpx;
}

.search-bar-bg {
  width: 100vw;
  background: #377dff;
  padding: 0 0 32rpx 0;
}
.search-bar {
  width: 92vw;
  max-width: 600rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(55,125,255,0.08);
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 64rpx;
  position: relative;
  top: 24rpx;
}
.search-input {
  flex: 1;
  border: none;
  outline: none;
  font-size: 28rpx;
  background: transparent;
  color: #333;
  height: 64rpx;
}
.search-icon {
  font-size: 32rpx;
  color: #377dff;
  margin-left: 10rpx;
}

.record-date-group {
  display: flex;
  align-items: center;
  background: #f3f6fa;
  border-radius: 10rpx;
  padding: 16rpx 24rpx 12rpx 24rpx;
  margin: 32rpx 0 0 0;
  font-size: 26rpx;
  color: #377dff;
  font-weight: 500;
  gap: 32rpx;
  border-left: 6rpx solid #377dff;
}
.group-date {
  font-size: 28rpx;
  color: #377dff;
  font-weight: bold;
}
.group-sum {
  font-size: 24rpx;
  color: #07c160;
  margin-left: 18rpx;
}
.record-card {
  margin-top: 10rpx;
}

.share-btn {
  margin: 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
}

.share-btn:active {
  opacity: 0.8;
}
